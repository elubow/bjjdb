<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @tag.category %>
</p>

<p>
  <strong>Name:</strong>
  <%= @tag.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @tag.description %>
</p>

<% if @current_user and (@current_user.moderator? or @current_user.admin?) %>
  <%= link_to 'Edit', edit_tag_path(@tag) %> |
  <%= link_to 'Back', tags_path %>
<% end %>

<br />
<br />

<h2>
  Links
  (<%= @tag.links.count %>)
</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Tags</th>
      <th>Added By</th>
      <% if @current_user and (@current_user.moderator? or @current_user.admin?) %>
        <th colspan="3">Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tag.links.each do |link| %>
      <tr>
        <td><%= link_to link.title, link %></td>
        <td><%= link_to link.url, link.url %></td>
        <td>
          <% link.tags.each do |tag| %>
            <%= link_to "#{tag.category}::#{tag.name}", tag %>
          <% end %>
        </td>
        <td><%= link.user.name %> - <%= time_ago_in_words(link.created_at) %> ago</td>
        <% if @current_user and (@current_user.moderator? or @current_user.admin?) %>
          <td><%= link_to 'Show', link %></td>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @tag.links.count == 0 %>
  I'm lonely. Please add some links for me.
<% end %>
