<%= form_with(model: review, local: true) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card my-4">
    <h5 class="card-header">Share your Thoughts</h5>
    <div class="card-body">
      <div class="form-group form-check">
        <p>
          <%= form.check_box :home_gym, :class => 'form-check-input' %> I train here regularly<br />
        </p>
      </div>

      <div class="form-group form-check form-check-inline">
        <strong>Rating</strong>(<small>5 is best</small>)
        &nbsp; <%= form.radio_button :stars, '1', :class => 'form-check-input' %> 1
        &nbsp; <%= form.radio_button :stars, '2', :class => 'form-check-input' %> 2
        &nbsp; <%= form.radio_button :stars, '3', :class => 'form-check-input' %> 3
        &nbsp; <%= form.radio_button :stars, '4', :class => 'form-check-input' %> 4
        &nbsp; <%= form.radio_button :stars, '5', :class => 'form-check-input' %> 5
      </div>

      <br />

      <div class="form-group form-check form-check-inline">
        <strong>Roll Type</strong>
        <small class="ml-2 mr-1">Flow Rolls</small>
        &nbsp; <%= form.radio_button :roll_type, '1', :class => 'form-check-input' %> 1
        &nbsp; <%= form.radio_button :roll_type, '2', :class => 'form-check-input' %> 2
        &nbsp; <%= form.radio_button :roll_type, '3', :class => 'form-check-input' %> 3
        &nbsp; <%= form.radio_button :roll_type, '4', :class => 'form-check-input' %> 4
        &nbsp; <%= form.radio_button :roll_type, '5', :class => 'form-check-input' %> 5
        <small class="ml-1">Competition Rolls</small>
      </div>

       <div class="form-group form-row">
        <%= form.label :languages, class: 'col-form-label-lg' %>
        <%= form.select :languages,
          Review::Languages.sort,
            { },
            { multiple: true }
          %>
        <small id="review_languages_help" class="form-text text-muted">Add a list of languages that the instructors speak/teach class in.</small>
        
      </div>

      <div class="form-group form-row">
        <%= form.label :tags, class: 'col-form-label-lg' %>
        <%= form.select :tags,
          Review::Tags.sort,
            { },
            { multiple: true }
          %>
        <small id="review_tags_help" class="form-text text-muted">A list of tags that most applies to your experience at this gym.</small>
        
      </div>

      <div class="form-group">
        <strong>Body</strong>
        <%= form.text_area :body, id: :review_body, class: 'form-control' %>
      </div>

      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.hidden_field :gym_id, value: @gym.id %>

      <div class="form-group">
        <%= form.submit :Submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
