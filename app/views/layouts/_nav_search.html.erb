<div class="row">
<%= form_with url: search_path, local: true, method: :get, html: { class: "form-inline my-2 my-lg-0" } do |form| %>
  <div class="col-6 mr-2">
    <%= form.text_field :q, placeholder: "Search", data: { behavior: "autocomplete" }, class: "form-control mr-sm-2 mt-3" %>
  </div>
  <div class="col">
    <%= form.button "Search", class: "btn btn-outline my-2 my-sm-0 ml-2" %>
  </div>
<% end %>
</div>
