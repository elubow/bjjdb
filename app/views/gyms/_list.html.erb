<table class="table">
  <thead>
    <tr>
      <th>Gym Name</th>
      <th>Rating</th>
      <th>Primary Languages</th>
      <th>Affiliation</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% gyms.each do |gym| %>
      <tr>
        <td><%= link_to gym.name, gym %></td>
        <td>
          <% if !gym.reviews.empty? %>
            <%= gym.average_stars %> stars (<%= pluralize(gym.total_times_rated, 'rating') %>)
          <% end %>
        </td>
        <td>
          <% if gym.primary_languages %>
            <% gym.primary_languages.each do |lng| %>
              <button type="button" class="btn btn-secondary pl-2 ml-1"><%= lng.first %></button>

            <% end %>
          <% end %>
        </td>
        <td><%= gym.affiliation if gym.affiliation.present? %></td>
        <td>
          <%= gym.pretty_city_state_country if gym.pretty_city_state_country.present? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
