  <div class="row">
    <div class="col-4 mt-auto">
      <%= "Phone: #{gym.phone}" if gym.phone.present? %><br />
      <%= "Email: #{gym.email}" if gym.phone.present? %><br />
      <%= link_to gym.website if gym.website.present? %>
    </div>
    <div class="col-8 mt-auto">
      <p>
        <%= gym.address_1 if gym.address_1 %><br />
        <%= gym.address_2 if gym.address_2 %>
        <%= gym.city if gym.city %>, 
          <%= gym.state if gym.state %>
          <%= gym.postal_code if gym.postal_code %><br />
          <%= gym.country if gym.country %>
      </p>
    </div>
  </div>

  <br />

  <div class="row">
    <div class="col-4">
      <%= gym.average_stars %> stars (<%= pluralize(gym.total_times_rated, 'ratings') %>) / <%= pluralize(gym.reviews.count, 'review') %>
    </div>

    <div class="col-4">
      <% if gym.languages.present? %>
      <strong>Languages</strong>: <%= gym.languages.join(', ') %>
      <% end %>
    </div>
  </div>


