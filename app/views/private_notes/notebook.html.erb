<div class="col">
<h1 class="mt-4">My Notebook</h1>
<table "table table-hover">
  <thead>
    <tr>
      <th scope=col">Link</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @private_notes.each do |private_note| %>
      <tr>
        <td><%= link_to private_note.link.title, private_note.link %></td>
        <td><%= private_note.title %></td>
        <td><%= private_note.body %></td>
        <td><%= link_to 'Edit', edit_private_note_path(private_note), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Delete', private_note, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-center">
        <%== pagy_nav_bootstrap(@pagy) %>
      </div>
    </div>
  </div>

</div>
