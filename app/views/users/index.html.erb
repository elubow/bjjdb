<div class="col">
  <h1 class="mt-4">Users</h1>
  <div class="column">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Name</td>
          <td>Email</td>
          <td>Belt</td>
          <td>Gender</td>
          <td>User Since</td>
          <td>Videos Added</td>
          <td>Logins</td>
          <td>Last Login</td>
          <td>Deleted</td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <%= render user %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-center">
        <%== pagy_nav_bootstrap(@pagy) %>
      </div>
    </div>
  </div>

</div>
