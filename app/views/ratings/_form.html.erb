<%= form_for @ratings, url: link_ratings_path(@link) do |f| %>
    <%= f.radio_button :value, 1, :onclick => "this.parentNode.submit();" %> 
    <%= label :rating_one_star, '1' %>
    <%= f.radio_button :value, 2, :onclick => "this.parentNode.submit();" %>
    <%= label :rating_two_stars, '2' %>
    <%= f.radio_button :value, 3, :onclick => "this.parentNode.submit();" %> 
    <%= label :rating_three_stars, '3' %>
    <%= f.radio_button :value, 4, :onclick => "this.parentNode.submit();" %>
    <%= label :rating_four_stars, '4' %>
    <%= f.radio_button :value, 5, :onclick => "this.parentNode.submit();" %> 
    <%= label :rating_five_stars, '5' %>
<% end %>