$(function(){
  <% if @links.size > 0 %>
    $('#main-cards').html(`<%= render partial: 'links/cards', locals: { links: @links } %>`).show();
    $('#pagy-container').show();
    $('#pagy-div').html('<%== pagy_nav_bootstrap(@pagy) %>');
  <% else %>
    $('#main-cards').hide();
    $('#pagy-container').hide();
    $('span#results-text').addClass("text-danger").text("We ain't found sh*t!").show();
  <% end %>

  // this get rendered no matter what
    $('div#search-results-div').html(`<%= render partial: 'search/targeted_results', locals: { links: @links } %>`);
});
