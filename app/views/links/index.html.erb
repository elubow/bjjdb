<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Tags</th>
      <th>Added By</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title %></td>
        <td><%= link.url %></td>
        <td>
          <% link.tags.each do |tag| %>
            <%= link_to "#{tag.category}::#{tag.name}", tag %>
          <% end %>
        </td>
        <td><%= link.user.name %> - <%= time_ago_in_words(link.created_at) %> ago</td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

